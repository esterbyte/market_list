<h1>Lista de Compras</h1>

<% if flash[:success] %>
  <div class="success-message">
    <%= flash[:success] %>
  </div>
<% end %>

<% if flash[:error] %>
  <div class="error-message">
    <%= flash[:error] %>
  </div>
<% end %>

<ul>
  <% @market_lists.each do |list| %>
    <li>
    <%="#{list.name} #{list.market_date}"%> <%= link_to 'Editar', edit_market_list_path(list)%>
    <%= link_to 'Excluir', list, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger' %>
    <%= link_to 'Detalhes', list %>
    </li>
    <% end %>
</ul>

<%= link_to 'Nova lista de Mercado', new_market_list_path %>

