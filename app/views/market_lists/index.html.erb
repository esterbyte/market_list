<h1 class="mb-4 mt-4 text-center">Lista de Compras</h1>

<ul class="list-group">
  <% @market_lists.each do |list| %>
    <li class="list-group-item d-flex justify-content-between align-items-center mb-2">
      <span>
        <%= "#{list.name}" %>
      </span>
      <div class="d-flex">
        <%= link_to edit_market_list_path(list), class: 'btn btn-secondary', style: 'margin-right: 5px;' do %>
          <i class="bi bi-pencil"></i> Editar
        <% end %>

        <%= link_to list, method: :delete, data: { turbo_confirm: 'Tem certeza de que deseja excluir este item?' }, class: 'btn btn-danger', style: 'margin-right: 5px;' do %>
          <i class="bi bi-trash"></i> Excluir
        <% end %>

        <%= link_to market_list_path(list), class: 'btn btn-secondary' do %>
          <i class="bi bi-eye"></i> Ver Itens
        <% end %>
      </div>
    </li>
  <% end %>
</ul>

<%= link_to new_market_list_path, class: 'btn btn-primary', style: 'margin-left: 10px;' do %>
  <i class="bi bi-plus"></i> Nova lista de Mercado
<% end %>
