<h1 class="mb-4 mt-4 text-center">Lista de Compras</h1>

<ul class="list-group">
  <% @market_lists.each do |list| %>
    <li class="list-group-item d-flex justify-content-between align-items-center mb-2">
      <span>
        <%= "#{list.name}" %>
      </span>
      <div class="d-flex">
        <%= button_to edit_market_list_path(list), method: :get, class: 'btn btn-secondary', style: 'margin-right: 5px;' do %> 
          <i class="bi bi-pencil"></i>
        <% end %>
        <%= button_to list, method: :delete, data: { turbo_confirm: 'Tem certeza de que deseja excluir este item?' }, class: 'btn btn-danger', style: 'margin-right: 5px;' do %>
          <i class="bi bi-trash"></i> 
        <% end %>
        <%= button_to({ action: 'show', id: list.id }, method: :get, class: 'btn btn-secondary') do %>
          <i class="bi bi-eye"></i>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>

<%= button_to 'Nova lista de Mercado', new_market_list_path, method: :get, class: 'btn btn-primary', style: 'margin-left: 10px;' %>
