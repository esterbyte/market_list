<h1>Lista de Compras</h1>

<ul>
  <% @market_lists.each do |list| %>
    <li>
      <%= "#{list.name} #{list.market_date}" %>
      <%= link_to 'Editar', edit_market_list_path(list), class: 'btn btn-secondary' %>
      <%= link_to 'Excluir', list, data: { turbo_method: :delete, turbo_confirm: 'Tem certeza de que deseja excluir este item?' }, class: 'btn btn-secondary' %>
      <%= link_to 'Ver itens', list, class: 'btn btn-secondary' %>
    </li>
  <% end %>
</ul>


