<%= form_for [@market_list, @market_item], html: { class: 'mb-4' } do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control col-md-6' %>
  </div>

  <div class="mb-3">
    <%= f.label :quantidade, class: 'form-label' %>
    <%= f.number_field :quantidade, class: 'form-control col-md-6' %>
  </div>

  <div class="mb-4">
    <%= f.submit 'Criar Item de Mercado', class: 'btn btn-primary' %>
  </div>
<% end %>
